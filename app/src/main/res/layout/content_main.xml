<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".View.Activity.MainActivity">

    <Button
        android:minWidth="250dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Client"
        android:id="@+id/button_create_client"
        android:onClick="createNewClient"/>

    <Button
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Client"
        android:id="@+id/button_edit_client"/>

    <Button
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Client List"
        android:id="@+id/button_view_client_list"
        android:onClick="viewClientList"
        android:layout_gravity="center_horizontal" />


    <Button
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Daily Log"
        android:onClick="updateDailyLog"
        android:id="@+id/button_update_daily_log"/>

    <Button
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:onClick="openSettings"
        android:id="@+id/button_settings" />

    <Button
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Total To Date"
        android:id="@+id/button_monthly_tally"
        android:onClick="monthlyTally"/>
    <Button
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yearly Total To Date"
        android:id="@+id/button_yearly_tally"
        android:onClick="yearlyTally"/>
</LinearLayout>
