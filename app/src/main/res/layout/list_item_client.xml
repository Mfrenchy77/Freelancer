<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/list_item_edit_client_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primary_light"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/list_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:elegantTextHeight="false"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Client McButtHurts"/>

            <TextView
                android:id="@+id/list_client_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="(Client McButtHurts)"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="4dp"
                android:alpha=".8"
                android:background="@color/accent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">


            <TextView
                android:id="@+id/list_client_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:padding="4dp"
                android:textColor="@color/primary_text"
                tools:text="Email@Aol.net"/>


            <TextView
                android:id="@+id/list_client_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:linksClickable="true"
                android:padding="4dp"
                android:textColor="@color/primary_text"
                tools:text="201-867-5309"/>

            <TextView
                android:id="@+id/list_client_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="map"
                android:padding="4dp"
                android:textColor="@color/primary_text"
                tools:text="1234546 Nowhere St. Apt 123456 San Diego CA, 12345"/>

            <TextView
                android:id="@+id/list_client_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/primary_text"
                tools:text="$50.00"/>

            <TextView
                android:id="@+id/list_client_recurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/primary_text"
                tools:text="M, W, Th"/>

            <TextView
                android:id="@+id/list_client_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/primary_text"
                tools:text="I Fucking hate this guy, but what am I going to do I need the monies!"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
